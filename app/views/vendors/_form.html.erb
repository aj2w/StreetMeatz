<%= render '/layouts/authenticate' %>

<% if @current_user %>

<div class="nonmap">
  <div class="row-fluid">
    <div class="tallbox">
      <div class="span6 offset1">
        <h1>Add Vendor</h1>

        <%= form_for @vendor do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, :placeholder => "Vendor name" %><br>
        <%= f.label :address %>
        <%= f.text_field :address, :placeholder => "Vendor address" %><br>
        <%= f.label :twitter %>
        <%= f.text_field :twitter, :placeholder => "Vendor twitter" %><br>
        <%= f.label "Select available menu items from the list below, or add manually later:" %>

        <% Menuitem.all.each do |menuitem| %>
        <%= check_box_tag "vendor[menuitem_ids][]", menuitem.id, @vendor.menuitems.include?(menuitem), :style => "float:left;" %>
        <%= label_tag menuitem.name %>
        <% end %><br>
        <%= f.submit :class => "btn btn-primary" -%>
        <% end %><br>
      </div></div></div></div>

      <% end %>