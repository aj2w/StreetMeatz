<div class="nonmap">
<div class="row-fluid">
  <div class="tallbox">
  <div class="span8 offset1">
    <h1>Add Menu Item</h1>
    <%= form_for @menuitem do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %><br>
      <%= f.label :description %>
      <%= f.text_field :description %><br>
      <%= f.label :price %>
      <%= f.text_field :price %><br>
      <%= f.label "Which of the following vendors serve this dish?" %>

      <% Vendor.all.each do |vendor| %>
        <%= check_box_tag "menuitem[vendor_ids][]", vendor.id, @menuitem.vendors.include?(vendor), :style => "float:left;" %>
        <%= label_tag vendor.name %>

        <% end %><br>
      <%= f.submit "Add", :class => "btn btn-primary" -%>
      <% end %><br>
  </div>
</div>
</div>
</div>