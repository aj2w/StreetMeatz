<%= form_for @menuitem do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :description %><br>
  <%= f.text_field :description %><br>
  <%= f.label :price %><br>
  <%= f.text_field :price %><br>
  <%= f.label "Which of the following vendors serve this dish?" %><br>

  <% Vendor.all.each do |vendor| %>
    <%= label_tag vendor.name %>
    <%= check_box_tag "menuitem[vendor_ids][]", vendor.id, @menuitem.vendors.include?(vendor) %><br>
    <% end %><br>
    <%= f.submit %>
    <% end %><br>
