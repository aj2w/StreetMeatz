<h1>Review a vendor!</h1>

<%= form_for @review do |f| %>
  <%= f.collection_select :vendor_id, Vendor.all, :id, :name %><br><br>
  <%= f.label "What did you like? What didn't you like?" %><br>
    <%= f.text_field :text, :placeholder => "Write your review here" %><br><br>
  <%= f.label "Rating" %><br>
    <%= f.radio_button :rating, "5" %>
    <%= f.label "5 - Excellent" %><br>
      <%= f.radio_button :rating, "4" %>
    <%= f.label "4 - Great" %><br>
      <%= f.radio_button :rating, "3" %>
    <%= f.label "3 - Good" %><br>
      <%= f.radio_button :rating, "2" %>
    <%= f.label "2 - Bad" %><br>
      <%= f.radio_button :rating, "1" %>
    <%= f.label "1 - I made a huge mistake" %><br><br>
<%= f.submit %>
<% end %><br>
